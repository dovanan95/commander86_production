    function myMessage(id_block, my_name, content, isImportant)
    {
        var mess_block = `
                            <div class="outgoing" id=${id_block}>
                                <div class="bubble">
                                    <div style="font-size: 10px; font-style:italic; ">${my_name}</div>
                                    ${content}
