                                <div class="bubble">
                                    <div style="font-size: 10px; font-style:italic; ">${sender_name}</div>
                                    ${content}
                                </div>
                                <div class="block_func_btn" style="float:right;">
                                    <div class="expand-func-icon">
                                        <div class="dots"></div>
